{
  "$schema": "https://opencode.ai/config.json",
  // VaultAI Code Assistant - Configuration par défaut
  // Ce fichier configure VaultAI comme provider principal

  "provider": {
    // Provider VaultAI On-Premise (compatible OpenAI API)
    "vaultai": {
      "name": "VaultAI On-Premise",
      "api": "https://api.vaultai.local/v1",
      "env": ["VAULTAI_API_KEY"],
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "headers": {
          "X-VaultAI-Client": "vault-code-cli",
          "X-VaultAI-Version": "1.0"
        }
      },
      "models": {
        "gpt-4": {
          "name": "GPT-4 (VaultAI)",
          "limit": {
            "context": 128000,
            "output": 4096
          },
          "tool_call": true,
          "temperature": true,
          "attachment": true
        },
        "gpt-4-turbo": {
          "name": "GPT-4 Turbo (VaultAI)",
          "limit": {
            "context": 128000,
            "output": 4096
          },
          "tool_call": true,
          "temperature": true,
          "attachment": true
        },
        "gpt-3.5-turbo": {
          "name": "GPT-3.5 Turbo (VaultAI)",
          "limit": {
            "context": 16385,
            "output": 4096
          },
          "tool_call": true,
          "temperature": true
        },
        "claude-3-sonnet": {
          "name": "Claude 3 Sonnet (VaultAI)",
          "limit": {
            "context": 200000,
            "output": 4096
          },
          "tool_call": true,
          "temperature": true,
          "attachment": true
        },
        "claude-3-haiku": {
          "name": "Claude 3 Haiku (VaultAI)",
          "limit": {
            "context": 200000,
            "output": 4096
          },
          "tool_call": true,
          "temperature": true
        }
      }
    }
  },

  // Modèle par défaut (utilise VaultAI)
  "model": "vaultai/gpt-4",

  // Désactiver la télémétrie pour la souveraineté des données
  "telemetry": false
}
